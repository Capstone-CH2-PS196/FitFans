<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collection_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="11dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/secondary"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/image_equipment"
            android:contentDescription="@string/detection_image"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/result_sample_image" />

        <TextView
            android:id="@+id/title_equipment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="18dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_equipment"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Dumbbell"/>

        <TextView
            android:id="@+id/desc_equipment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/title_equipment"
            app:layout_constraintStart_toEndOf="@id/image_equipment"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Type of exercise equipment used in physical fitness to train muscles, especially those in the arms, shoulders, chest, and back. Dumbbells typically consist of a metal bar with removable weight plates that can be adjusted to vary the load to be lifted."/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>